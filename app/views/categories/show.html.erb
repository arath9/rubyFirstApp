<div class="container ">
<table class="table table-striped table-hover">
  <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
  </tr>
    <% @posts.each do |post| %>
  <tr>
      <td><%= post.title %>     </td>
      <td><%= post.content %>   </td>
      <td><%= link_to 'Show', post_path(post) %> </td>
      <td><%= link_to 'Edit', edit_post_path(post) %> </td>
      <td><%= link_to 'Destroy', post_path(post),method: :delete,
              data: { confirm: 'Are you sure?' } %> </td>
  </tr>     
  <% end %>
</table>
</div>