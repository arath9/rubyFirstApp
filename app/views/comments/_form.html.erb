<%= simple_form_for([@post, @post.comments.build]) do |f| %>

<div class="field">
  <div class="control">
    <%= f.label :text %><br>
    <%= f.input :text, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>
<%= f.button :submit, 'Leave a reply', class: "button is-primary" %>
<% end %>